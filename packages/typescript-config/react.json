{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "ReactJs",
  "extends": "./base.json",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "paths": {
      "@ui/*": ["../../packages/ui/src/*"]
    }
  }
}
